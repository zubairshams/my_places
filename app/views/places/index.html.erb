<div class="page-header">
  <%= link_to 'New', new_place_path, class: 'btn btn-primary pull-right' %>
  <h1>My Places</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.title %></td>
        <td><%= place.address %></td>
        <td>
          <%= link_to 'Show', place, title: 'Show', class: 'btn-link' %>
          <% if place.user == current_user %>
           <%= link_to 'Edit', edit_place_path(place), title: 'Edit', class: 'btn btn-link' %>
            <%= link_to 'Destroy', place_path(place),
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        title: 'Delete',
                        class: 'btn btn-link' %>
          <% end %>
        </td>      

      </tr>
    <% end %>
  </tbody>
</table>
